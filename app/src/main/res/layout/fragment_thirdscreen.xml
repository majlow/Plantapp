<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/welcome2"
    tools:context=".onboarding.Thirdscreen">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="293dp"
        android:layout_height="280dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="40dp"
        android:src="@drawable/giphy3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="282dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-light"
        android:gravity="top"
        android:text="BROADEN UNDERSTANDING"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="326dp"
        android:layout_height="89dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Let's learn more about beautiful plants and read many articles about plants and gardening"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="normal" />



</LinearLayout>